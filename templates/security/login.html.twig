{% extends 'base.html.twig' %}
{% block title %}Se connecter{% endblock %}
{% block body %}
    <h1>Connexion</h1>
    <div class="jumbotron">
        <form action="{{ path('security_login') }}" method="post">
            <div class="form-group">
                <input type="text" placeholder="Adresse mail..." class="form-control" required name="_username" />
            </div>
            <div class="form-group">
                <input type="password" placeholder="Mot de passe...." class="form-control" required name="_password" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Connexion !</button>
            </div>
        </form>
    </div>
{% endblock %}